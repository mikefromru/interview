<WindowManager>
    Menu:
        id: menu
        name: 'menu'
    Question:
        id: list_questions
        name: 'list_questions'
    Detail:
        id: detail
        name: 'detail'

<Detail>
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            md_bg_color: rgba('#ffffff')
            id: title
            title: root.title
            left_action_items:[['chevron-left', lambda x: root.go_back()]]
        
        MDBoxLayout:
            padding: (dp(10),dp(10), dp(10), dp(5))
            ScrollView:
                effect_cls: 'ScrollEffect'
                do_scroll_x: False
                do_scroll_y: True
                MDLabel:
#id: body
                    text: root.body
                    size_hint: 1, None
                    size: self.texture_size
                    markup: True
                    halign: 'left'

#<ListItem>
#font_name: 'fonts/roboto-mono/logo_font.ttf'
#    font_style: 'Subtitle2'
<ListItem>
    orientation: 'vertical'
    size_hint: 1, None
    height: '60dp'
#md_bg_color: app.theme_cls.primary_light
#md_bg_color: rgba('#ffffff')
#border: 5
    line_color: rgba('#808080')
    line_width: 7
    radius: ['10dp',]
    MDBoxLayout:
        padding: '10dp'
#MDLabel:
#            size_hint_x: 0.1
#            text: str(root.fuck)[:-2]
#            font_name: 'fonts/roboto-mono/roboto-mono-bold.ttf'
#            bold: True
#            font_size: '14sp'

#theme_text_color: 'Custom'
#            text_color: app.theme_cls.primary_light
        MDLabel:
            text: root.text
            font_name: 'fonts//roboto-mono/roboto-mono-bold.ttf'
            font_size: '14sp'
            bold: True
            markup: True

<MD3Card>
    padding: 4
    size_hint: None, None
    size: "150dp", "70dp"
    md_bg_color: app.theme_cls.primary_light
    on_release: root.get_questions()
    radius: '10dp'
    MDRelativeLayout:

#AsyncImage:
        FitImage:
            source: root.image
            size_hint: None, None
            size: "50dp", "50dp"
            pos_hint: {'center_x': .5, 'center_y': .5}
<Question>
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            md_bg_color: rgba('#ffffff')
            id: mytitle
            pos_hint: {'top': 1}
            left_action_items:[['chevron-left', lambda x: root.callback()]]

        ScrollView:
            effect_cls: 'ScrollEffect'
            do_scroll_x: False
            do_scroll_y: True
            id: myscroll
            MDBoxLayout:
                spacing: '15dp'
                padding: '15dp'
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                id: box

        MDFloatLayout:
            size_hint_y: None
            height: '50dp'
            orientation: 'horizontal'
            md_bg_color: rgba('#ffffff')
            MDIconButton:
                icon: 'chevron-left'
                on_release: root.prev()
                pos_hint: {'center_x': .3, 'center_y': .5}
                user_font_size: '28sp'
            MDLabel:
                text: str(root.page_id) + '/' + str(root.total)
                bold: True
                halign: 'center'
                pos_hint: {'center_x': .5}

            MDIconButton:
                icon: 'chevron-right'
                on_release: root.next()
                user_font_size: '31sp'
                pos_hint: {'center_x': .7, 'center_y': .5}
<Menu>
    MDToolbar:

        title: '[i]Interview +[/i]'
        pos_hint: {'top': 1}
    MDGridLayout:
        cols: 2
        adaptive_size: True
        id: box
        spacing: '16sp'
        pos_hint: {'center_x': .5, 'center_y': .5}
    MDFlatButton:
        id: lang
        on_release: root.switch_lang(self.text)
