<MD3Card>
    padding: 4
    size_hint: None, None
    size: "150dp", "70dp"
#md_bg_color: app.theme_cls.primary_light
    on_release: root.get_questions()
    radius: '10dp'
    line_color: rgba('#808080')
    line_height: 20
    MDRelativeLayout:

#AsyncImage:
        FitImage:
            source: root.image
            size_hint: None, None
            size: "50dp", "50dp"
            pos_hint: {'center_x': .5, 'center_y': .5}

<Menu>
#    MDToolbar:
    MDTopAppBar:
        elevation: 0
        md_bg_color: rgba('#ffffff')
        title: '[i]Interview +[/i]'
        pos_hint: {'top': 1}

    MDGridLayout:
        cols: 2
        adaptive_size: True
        id: box
        spacing: '16sp'
        pos_hint: {'center_x': .5, 'center_y': .5}

    MDFlatButton:
        id: lang
        font_size: dp(18)
        on_release: root.switch_lang(self.text)

