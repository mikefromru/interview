<Detail>
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
#elevation: 0
#MDToolbar:
            md_bg_color: rgba('#ffffff')
            id: title
            title: root.title
            left_action_items:[['chevron-left', lambda x: root.go_back()]]
        
        MDBoxLayout:
            padding: (dp(10),dp(10), dp(10), dp(5))
            ScrollView:
                effect_cls: 'ScrollEffect'
                do_scroll_x: False
                do_scroll_y: True
                MDLabel:
#id: body
                    text: root.body
                    size_hint: 1, None
                    size: self.texture_size
                    markup: True
                    halign: 'left'
